<%- include('header') %>
<div class="container">
    <%- include('title') %>
    <div class="row">
        <div class="col-md-12">
            <h3>
                Pet 1 adatai
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <form method="POST">
                <div class="form-group">
                    <label for="name">Név</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= (typeof pet !== 'undefined') ? pet.name : '' %>"/>
                </div>
                <div class="form-group">
                    <label for="owner">Gazda</label>
                    <select class="form-control" id="owner" name="owner">
                        <% users.forEach(function(element) {

                            if(element.name == user.name) { %>
                                <option selected="selected" value="<%= element.id %>"><%= element.name %></option>
                            <% } else { %>
                                <option value="<%= element.id %>"><%= element.name %></option>
                            <% }
                        }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="species">Faj</label>
                    <select class="form-control" id="species" name="species">
                        <option>Mosómedve</option>
                        <option>Macskamedve</option>
                    </select>
                </div>
                <input type="submit" class="btn btn-primary" value="Kész"/>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>